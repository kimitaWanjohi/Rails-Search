<div id="<%= dom_id article %>">
  <div class="card  bg-base-100 shadow-xl">
    <div class="card-body items-center text-center">
      <h2 class="card-title text-2xl">
        <%= article.title %>
      </h2>

      <p>
        <%= article.content %>
      </p>

      <div class="card-actions mt-2">
        <div class="join">
          <%= link_to "Show", article_path(article), class: "btn btn-sm btn-ghost join-item hover:bg-primary" %>
          <%= link_to "Edit", edit_article_path(article), class: "btn btn-sm btn-ghost join-item hover:bg-secondary" %>
          <%= button_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-ghost join-item hover:bg-error" %>
        </div>
      </div>
    </div>
  </div>
</div>
