<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Articles" %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Articles</h1>
    <div>
      <%= form_with(url: articles_path, method: :get, data: { controller: "search-form", turbo_frame: "articles", turbo_action: "advance" }) do |form| %>
        <div class="join">
          <%= form.label :query, class: "input input-bordered flex items-center gap-2" do  %>
            Search
            <%= form.text_field :query, class: "grow w-full max-w-xs", data: {
              action: "input->search-form#search"
            } %>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= link_to "New article", new_article_path, class: "btn btn-outline btn-primary" %>
  </div>

  <div>
    <%= render "articles" %>
  </div>
</div>

